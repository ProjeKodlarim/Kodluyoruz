package omerExample;
import java.io.*;

import java.util.Scanner;

public class Example {
    
    public static void main(String[] args) {
    	Scanner scan=new Scanner(System.in);
    	
    	System.out.print("Kaç tane sayı gireceksiniz:");
    	int sayi=scan.nextInt();
    	int enkucuk,enbuyuk,temp,yenisayi;
    	if(sayi>2) {
    		System.out.print("1. Sayıyı giriniz:");
        	enkucuk=scan.nextInt();
        	System.out.print("2. Sayıyı giriniz:");
        	enbuyuk=scan.nextInt();
        	if(enbuyuk<enkucuk) {
        		temp=enkucuk;
        		enkucuk=enbuyuk;
        		enbuyuk=temp;
    	}
        	for(int i=0;i<(sayi-2);i++) {
        		System.out.print((3+i)+". Sayıyı giriniz:");
        		yenisayi=scan.nextInt();
        		if(enbuyuk<yenisayi) 
        			enbuyuk=yenisayi;
        		else if(enkucuk>yenisayi)
        			enkucuk=yenisayi;
        	}
        	System.out.println("En büyük:"+enbuyuk+"/En küçük:"+enkucuk);
    	
    	
    	}else
    		System.out.println("En az iki deger girmelisiniz...");
    	
    	
   }
}
