package omerExample;
import java.io.*;

import java.util.Scanner;

public class Example {
    
    public static void main(String[] args) {
    	Scanner scan=new Scanner(System.in);
    	
    	int sayi=0,toplam=0;
    	
    	while(sayi%2!=1) {
    		System.out.print("SayÄ± gir:");
    		sayi=scan.nextInt();
    		if(sayi%2==0 && sayi%4==0) {
    			toplam+=sayi;
    		}
    		
    	}
    	System.out.println("Toplam:"+toplam);
   }
}
